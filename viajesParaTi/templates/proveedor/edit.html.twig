{# templates/proveedor/edit.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
     <div class="container">
        <h1 class="mt-5">Editar Proveedor</h1>
        <div class="row">
        <div class="col-md-8">
                {{ form_start(form, {'attr': {'class': 'mt-4'}}) }}
                <div class="form-group">
                    {{ form_row(form.name) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.email) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.phone) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.type) }}   
                </div>
                <div class="form-check">
                    {{ form_widget(form.active, { 'attr': {'class': 'form-check-input'} }) }}
                    {{ form_label(form.active, 'Activo', { 'label_attr': {'class': 'form-check-label'} }) }}
                </div>
                <div class="mt-3">
                    {{ form_row(form.save) }}
                </div>
                {{ form_end(form) }}
            </div>
        </div>
     </div>
{% endblock %}



